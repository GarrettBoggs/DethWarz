<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.guest.binder.ui.CoverActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="heroOneName"
        android:id="@+id/heroOneName"
        android:layout_below="@+id/heroOneImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="battleInfoOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/heroOneDescription"
        android:layout_below="@+id/heroOneName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:layout_toStartOf="@+id/heroTwoImage"
        android:layout_toLeftOf="@+id/heroTwoImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="heroTwoName"
        android:id="@+id/heroTwoName"
        android:layout_above="@+id/heroOneDescription"
        android:layout_toRightOf="@+id/heroOneDescription"
        android:layout_toEndOf="@+id/heroOneDescription" />

    <ImageView
        app:srcCompat="@drawable/dethwarz2"
        android:id="@+id/heroOneImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dethwarz2"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textView10"
        android:layout_toStartOf="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView6"
        android:layout_marginTop="34dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="V.S."
        android:id="@+id/textView10"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView13"
        android:layout_above="@+id/textView10"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heroTwoImage"
        android:src="@drawable/dethwarz2"
        android:layout_alignTop="@+id/heroOneImage"
        android:layout_toRightOf="@+id/heroOneImage"
        android:layout_toEndOf="@+id/heroOneImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/heroTwoDescription"
        android:layout_below="@+id/heroTwoName"
        android:layout_alignLeft="@+id/heroTwoName"
        android:layout_alignStart="@+id/heroTwoName"
        android:layout_alignBottom="@+id/heroOneDescription"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
